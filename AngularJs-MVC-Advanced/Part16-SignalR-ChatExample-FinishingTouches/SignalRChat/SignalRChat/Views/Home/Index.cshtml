@{
    ViewBag.Title = "Home Page";
    <script src="~/app/Module.js"></script>
    <script src="~/app/Controller.js"></script>

}
<div style="width:450px" ng-controller="MainController">
    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-4">
                    <h3 class="panel-title">Real Time Chat</h3>
                </div>
                <div class="col-sm-8">
                    <input ng-hide="inRoom" type="text" ng-model="roomName" class="form-control input-sm pull-left" style="width:60%" placeholder="room" autofocus />
                    <button ng-hide="inRoom" ng-click="joinRoom()" class="btn btn-primary btn-sm pull-right">Join Room</button>  
                    <button ng-show="inRoom" ng-click="leaveRoom()" class="btn btn-warning btn-sm pull-right">Leave Room</button>  
                </div>
            </div>
        </div>

        <div class="panel-body">
            <div ng-repeat="msg in messages">
                {{msg.message}}
            </div>
            <div>
                <input ng-show="nameSet" ng-model="newMessage" type="text" class="form-control input-sm pull-left" style="width:80%"/>
                <button ng-show="nameSet" ng-click="sendMessage()" class="btn pull-right btn-primary btn-sm"> Send </button>

                <input ng-hide="nameSet" ng-model="name" type="text" class="form-control input-sm pull-left" style="width:80%" />
                <button ng-hide="nameSet" ng-click="setName()" class="btn pull-right btn-primary btn-sm"> Set Name </button>
            </div>
        </div>

    </div>
</div>
